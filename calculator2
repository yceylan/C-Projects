#include <stdio.h>
#include <stdlib.h>

int main (void) {
	
	float x,a,b,sonuc;
	printf("1.toplama\n2.cikarma\n3.carpma\n4.bolme\n\n");
	printf("yapmak istediginiz islemi seciniz:");
	scanf("%f",&x);
	
	if (x==1) {
		printf("\nilk sayiyi giriniz:");
		scanf("%f",&a);
		printf("\nikinci sayiyi giriniz:");
		scanf("%f",&b);
		sonuc=a+b;
		printf("\nsonuc=%f\n\n",sonuc);
	}
	
	else if (x==2) {
		printf("\nilk sayiyi giriniz:");
		scanf("%f",&a);
		printf("\nikinci sayiyi giriniz:");
		scanf("%f",&b);
		sonuc=a-b;
		printf("\nsonuc=%f\n\n",sonuc);
	}
	
	else if (x==3) {
		printf("\nilk sayiyi giriniz:");
		scanf("%f",&a);
		printf("\nikinci sayiyi giriniz:");
		scanf("%f",&b);
		sonuc=a*b;
		printf("\nsonuc=%f\n\n",sonuc);
	}
	
	else if (x==4) {
		printf("\nilk sayiyi giriniz:");
		scanf("%f",&a);
		printf("\nikinci sayiyi giriniz:");
		scanf("%f",&b);
		sonuc=a/b;
		printf("\nsonuc=%f\n\n",sonuc);
	}
	
	else{
		printf("\nhatali islem.\n\n");
	}
	
	system("pause");
	return 0;
}
